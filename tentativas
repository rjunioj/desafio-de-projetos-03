    class idHeroi {
    constructor(nome, idade, tipo) {
      this.nome = nome;
      this.idade = idade;
      this.tipo = tipo;
    }
  idDesc() {
    return `${this.nome} ${this.idade} ${this.tipo}`;
  }
}
let meuHeroi = new idHeroi('Fulano', 32, 'mago');
